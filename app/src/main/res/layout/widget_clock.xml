<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.SkyClock.AppWidgetContainer">

    <ImageView
        android:id="@+id/widgetClockBasePanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/clock_base_panel" />

    <ImageView
        android:id="@+id/widgetSkyPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/sky_panel" />

    <ImageView
        android:id="@+id/widgetSunAndMoonPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/sun_and_moon_panel" />

    <ImageView
        android:id="@+id/widgetHorizonPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/horizon_panel" />

    <ImageView
        android:id="@+id/widgetClockHandsPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/clock_hands_panel" />

    <Button
        android:id="@+id/launchButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null" />

</FrameLayout>